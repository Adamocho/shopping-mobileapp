<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="8dp"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@drawable/border"
              android:layout_marginHorizontal="5dp">
  <ImageView
      android:id="@+id/rec_imageView"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_alignParentStart="true"
      tools:src="@tools:sample/avatars"/>

  <TextView
      android:id="@+id/rec_textView"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_gravity="center"
      android:layout_toEndOf="@id/rec_imageView"
      android:padding="5dp"
      tools:text="@tools:sample/lorem" />

  <TextView
      android:id="@+id/rec_priceTV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/rec_imageView"
      android:layout_toLeftOf="@id/rec_checkbox"
      android:layout_alignBaseline="@id/rec_checkbox"
      android:text="PRICE: "/>

  <CheckBox
      android:id="@+id/rec_checkbox"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/rec_textView" />

</RelativeLayout>